            }
        }
    }


    stage("Test") {
        steps {
            script {
                // let's clone the source
            sh "echo testing... "
                
            }
        }
    }

    stage("Build code") {
        steps {
            // let's clone the source
            
            script {
                sh "echo builiding .... "
            }
        }
    }
 }
}